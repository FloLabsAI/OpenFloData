# Database Configuration
DB_HOST=timescaledb
DB_PORT=5432
DB_NAME=volve_production
DB_USER=flodata
DB_PASSWORD=flodata_secret

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=flodata
POSTGRES_PASSWORD=flodata_secret
POSTGRES_DB=volve_production

# Streaming Configuration
SPEED_MULTIPLIER=360    # 1 hour of data every 10 seconds (3600/10)
STREAM_INTERVAL=10      # Seconds between each batch
START_OFFSET_DAYS=150   # Day in source data that maps to "now" (150 = ~Jan 2008 for Volve)

# Timezone
TZ=Asia/Kuala_Lumpur

# DuckDB Source
DUCKDB_PATH=/app/data/prod_hourly_data.duckdb
